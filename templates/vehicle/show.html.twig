{% extends 'base.html.twig' %}

{% block title %}{{ vehicle.displayName }} - MyPOS{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>{{ vehicle.displayName }}</h2>
                    <span class="badge bg-primary">{{ vehicle.type|title }}</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Basic Information</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Brand:</strong></td>
                                    <td>{{ vehicle.brand }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Model:</strong></td>
                                    <td>{{ vehicle.model }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Colour:</strong></td>
                                    <td>{{ vehicle.colour }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Price:</strong></td>
                                    <td><span class="h4 text-success">${{ vehicle.price|number_format(2, '.', ',') }}</span></td>
                                </tr>
                                <tr>
                                    <td><strong>Quantity:</strong></td>
                                    <td>{{ vehicle.quantity }}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Specific Details</h5>
                            <table class="table table-borderless">
                                {% for key, value in vehicle.specificAttributes %}
                                    <tr>
                                        <td><strong>{{ key|replace({'_': ' '})|title }}:</strong></td>
                                        <td>{{ value }}</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h5>Merchant Information</h5>
                        <p><strong>Sold by:</strong> {{ vehicle.merchant.fullName }}</p>
                        <p><strong>Listed on:</strong> {{ vehicle.createdAt|date('F j, Y') }}</p>
                        {% if vehicle.updatedAt %}
                            <p><strong>Last updated:</strong> {{ vehicle.updatedAt|date('F j, Y') }}</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    {% if app.user %}
                        {% if app.user.isBuyer %}
                            {% if isFollowed %}
                                <form method="post" action="{{ path('app_vehicle_unfollow', {id: vehicle.id}) }}">
                                    <button type="submit" class="btn btn-warning w-100 mb-2">Unfollow Vehicle</button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('app_vehicle_follow', {id: vehicle.id}) }}">
                                    <button type="submit" class="btn btn-success w-100 mb-2">Follow Vehicle</button>
                                </form>
                            {% endif %}
                        {% endif %}

                        {% if app.user.isMerchant and app.user == vehicle.merchant %}
                            <a href="{{ path('app_vehicle_edit', {id: vehicle.id}) }}" class="btn btn-primary w-100 mb-2">Edit Vehicle</a>
                            <form method="post" action="{{ path('app_vehicle_delete', {id: vehicle.id}) }}" onsubmit="return confirm('Are you sure you want to delete this vehicle?')">
                                <button type="submit" class="btn btn-danger w-100">Delete Vehicle</button>
                            </form>
                        {% endif %}
                    {% else %}
                        <div class="alert alert-info">
                            <p>Please <a href="{{ path('app_login') }}">login</a> to follow vehicles or contact merchants.</p>
                        </div>
                    {% endif %}

                    <div class="mt-3">
                        <a href="{{ path('app_vehicles') }}" class="btn btn-outline-secondary w-100">Back to Vehicles</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
